{{!
    @template core/url_preview_card

    Template for url preview element

    Example context (json):
    {
        "image": "https://moodle.org/logo/moodle-logo.svg",
        "title": "Title example",
        "description": "Description example",
        "sitename": "Name example",
        "canonicalurl": "https://moodle.org/"
    }
}}

<div style="max-width: 60%; padding: 0px !important" class="p-2">
    <div class="card shadow-sm">
        {{#image}}
            <img class="card-img-top" 
            src="{{{.}}}" 
            alt="Preview Image" 
            style="border-radius: calc(0.5rem - 1px) calc(0.5rem - 1px) 0 0;">
        {{/image}}
        <div class="card-footer">
            {{#title}}
                <h5><a href="{{{canonicalurl}}}" target="_blank" class="card-title stretched-link">{{.}}</a></h5>
            {{/title}}
            {{#description}}
                <div class="card-text">{{.}}</div>
            {{/description}}
            {{#sitename}}
                <small class="card-text text-muted text-uppercase">{{.}}</small>
            {{/sitename}}
        </div>
    </div>
</div>